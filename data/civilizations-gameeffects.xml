<?xml version="1.0" encoding="utf-8"?>
<GameEffects xmlns="GameEffects">
	<!-- ==================================================	-->
	<!--				Civ-Specific Traits					-->
	<!-- ==================================================	-->
	<!-- VENICE -->
	<Modifier id="MOD_TOWN_EXTRA_PRODUCTION_VENICE" collection="COLLECTION_PLAYER_CITIES" effect="EFFECT_CITY_ADJUST_YIELD">
		<SubjectRequirements>
			<Requirement type="REQUIREMENT_CITY_IS_TOWN"/>
		</SubjectRequirements>
		<Argument name="YieldType">YIELD_PRODUCTION</Argument>
		<Argument name="Percent">75</Argument>
	</Modifier>
	<Modifier id="MOD_TOWN_EXTRA_PRODUCTION_VENICE_DISTANT" collection="COLLECTION_PLAYER_CITIES" effect="EFFECT_CITY_ADJUST_YIELD">
		<SubjectRequirements>
			<Requirement type="REQUIREMENT_CITY_IS_DISTANT_LANDS"/>
			<Requirement type="REQUIREMENT_CITY_IS_TOWN"/>
		</SubjectRequirements>
		<Argument name="YieldType">YIELD_PRODUCTION</Argument>
		<Argument name="Percent">75</Argument>
	</Modifier>
	<Modifier id="TRAIT_MOD_VENICE_CITY_HALL_HAPPINESS" collection="COLLECTION_PLAYER_CITIES" effect="EFFECT_CITY_ADJUST_YIELD">
		<SubjectRequirements>
			<Requirement type="REQUIREMENT_CITY_IS_CAPITAL" inverse="true"/>
			<Requirement type="REQUIREMENT_CITY_IS_TOWN" inverse="true"/>
		</SubjectRequirements>

		<Argument name="YieldType">YIELD_HAPPINESS</Argument>
		<Argument name="Amount">-30</Argument>
	</Modifier>
	<Modifier id="MOD_VENICE_FORBID_CITIES_FROM_TOWNS" collection="COLLECTION_OWNER" effect="EFFECT_ADJUST_FORBID_UPGRADE_TOWN_TO_CITY">
	</Modifier>
	<Modifier id="TRAIT_MOD_PATRISIATO_POP" collection="COLLECTION_PLAYER_CITIES" effect="EFFECT_CITY_ADJUST_POPULATION" permanent="true">
		<SubjectRequirements>
			<Requirement type="REQUIREMENT_CITY_FOUNDED_BY_UNIT_TYPE">
				<Argument name="UnitType">UNIT_PATRISIATO</Argument>
			</Requirement>
			<Requirement type="REQUIREMENT_PLOT_ADJACENT_TO_COAST"/>
		</SubjectRequirements>
		<Argument name="Amount">2</Argument>
	</Modifier>
	<!-- ==================================================	-->
	<!--				Civ-Specific Trees					-->
	<!-- ==================================================	-->

	<Modifier id="MOD_REVEAL_CIV_CULTURE_TREE_VENICE" collection="COLLECTION_OWNER" effect="EFFECT_PLAYER_REVEAL_CULTURE_TREE">
		<SubjectRequirements>
			<Requirement type="REQUIREMENT_PLAYER_HAS_CIVILIZATION_OR_LEADER_TRAIT">
				<Argument name="TraitType">TRAIT_VENICE</Argument>
			</Requirement>
		</SubjectRequirements>
		<Argument name="ProgressionTreeType">TREE_CIVICS_EX_VENICE</Argument>
	</Modifier>
